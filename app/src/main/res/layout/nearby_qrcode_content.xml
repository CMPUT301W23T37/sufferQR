<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="120sp"
    >

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardElevation="5sp"
        app:cardMaxElevation="10sp"
        app:cardCornerRadius="10sp"
        android:layout_marginBottom="8sp"
        android:layout_marginTop="8sp"
        android:layout_marginStart="8sp"
        android:layout_marginEnd="8sp"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/nearbylist_qrname_text"
                android:layout_width="250sp"
                android:layout_height="30sp"
                android:text="QRname: XXXXX"
                android:textStyle="bold"
                android:textSize="20sp"
                android:gravity="center_vertical"
                android:layout_marginStart="10sp"
                android:layout_marginTop="5sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/nearbylist_date_text"
                android:layout_width="250sp"
                android:layout_height="20sp"
                android:layout_marginStart="12sp"
                android:layout_marginBottom="40sp"
                android:text="YYYY:MM:DD"
                android:gravity="center_vertical"
                android:textSize="11sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

            <TextView
                android:id="@+id/nearbylist_address_text"
                android:layout_width="300sp"
                android:layout_height="40sp"
                android:layout_marginStart="12sp"
                android:layout_marginBottom="3sp"
                android:text="address"
                android:gravity="center_vertical"
                android:textSize="11sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

            <TextView
                android:id="@+id/nearbylist_points_title_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10sp"
                android:layout_marginBottom="3sp"
                android:gravity="right"
                android:text="Points"
                android:textSize="11sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/nearbylist_points_text" />

            <TextView
                android:id="@+id/nearbylist_points_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5sp"
                android:layout_marginEnd="10sp"
                android:gravity="right"
                android:text="1,000"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/nearbylist_points_sign_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:layout_marginTop="5sp"
                android:layout_marginEnd="1sp"
                android:text="+"
                android:textSize="18sp"
                app:layout_constraintEnd_toStartOf="@+id/nearbylist_points_text"
                app:layout_constraintTop_toTopOf="parent" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>