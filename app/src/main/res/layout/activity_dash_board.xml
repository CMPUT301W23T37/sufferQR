<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DashBoard"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/qr_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/qrcode"
            android:paddingStart="30dp"
            android:paddingEnd="30dp"
            android:paddingTop="60dp"
            android:paddingBottom="30dp">
        </ImageView>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingTop="30dp">
            <TextView
                android:id="@+id/blue_rec"
                android:background="@drawable/round_rectangle_box_blue"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            </TextView>

            <TextView
                android:id="@+id/total_point_string"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/total_points_string"
                android:textColor="@color/white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintVertical_bias="0.15"
                app:layout_constraintHorizontal_bias="0.1">
            </TextView>

            <TextView
                android:id="@+id/total_point_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="100,200,312"
                android:textColor="@color/white"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.35">
            </TextView>
            <TextView
                android:id="@+id/total_qr_string"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/total_qr_string"
                android:textColor="@color/white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.13"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.6">
            </TextView>
            <TextView
                android:id="@+id/total_qr_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="301"
                android:textColor="@color/white"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.085"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.8">
            </TextView>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="80dp"
        android:paddingBottom="70dp">
        <TextView
            android:id="@+id/grey_rec_l"
            android:layout_width="170dp"
            android:layout_height="70dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.1"
            android:background="@drawable/round_rectangle_box_grey" />
        <ImageView
            android:id="@+id/trophy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/trophy"
            app:layout_constraintBottom_toBottomOf="@id/grey_rec_l"
            app:layout_constraintStart_toStartOf="@id/grey_rec_l"
            app:layout_constraintEnd_toEndOf="@id/grey_rec_l"
            app:layout_constraintTop_toTopOf="@id/grey_rec_l"
            app:layout_constraintHorizontal_bias="0.1"
            app:layout_constraintVertical_bias="0.5">
        </ImageView>
        <TextView
            android:id="@+id/grey_rec_r"
            android:layout_width="170dp"
            android:layout_height="70dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.9"
            android:background="@drawable/round_rectangle_box_grey"
            />
        <ImageView
            android:id="@+id/small_qr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/small_qr"
            app:layout_constraintBottom_toBottomOf="@id/grey_rec_r"
            app:layout_constraintStart_toStartOf="@id/grey_rec_r"
            app:layout_constraintEnd_toEndOf="@id/grey_rec_r"
            app:layout_constraintTop_toTopOf="@id/grey_rec_r"
            app:layout_constraintHorizontal_bias="0.1"
            app:layout_constraintVertical_bias="0.5">
        </ImageView>
        <TextView
            android:id="@+id/highest_score_string"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@id/grey_rec_l"
            app:layout_constraintStart_toStartOf="@id/grey_rec_l"
            app:layout_constraintEnd_toEndOf="@id/grey_rec_l"
            app:layout_constraintTop_toTopOf="@id/grey_rec_l"
            app:layout_constraintHorizontal_bias="0.6"
            app:layout_constraintVertical_bias="0.2"
            android:text="@string/highest_string"
            android:textSize="33px"
            android:textColor="@color/black"
            />
        <TextView
            android:id="@+id/highest_score_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@id/grey_rec_l"
            app:layout_constraintStart_toStartOf="@id/grey_rec_l"
            app:layout_constraintEnd_toEndOf="@id/grey_rec_l"
            app:layout_constraintTop_toTopOf="@id/grey_rec_l"
            app:layout_constraintHorizontal_bias="0.6"
            app:layout_constraintVertical_bias="0.6"
            android:text="2023"
            android:textStyle="bold"
            android:textSize="40px"
            android:textColor="@color/black"
            />
        <TextView
            android:id="@+id/last_scan_string"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@id/grey_rec_r"
            app:layout_constraintStart_toStartOf="@id/grey_rec_r"
            app:layout_constraintEnd_toEndOf="@id/grey_rec_r"
            app:layout_constraintTop_toTopOf="@id/grey_rec_r"
            app:layout_constraintHorizontal_bias="0.6"
            app:layout_constraintVertical_bias="0.2"
            android:text="@string/last_scan_string"
            android:textSize="33px"
            android:textColor="@color/black"
            />
        <TextView
            android:id="@+id/last_scan_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@id/grey_rec_r"
            app:layout_constraintStart_toStartOf="@id/grey_rec_r"
            app:layout_constraintEnd_toEndOf="@id/grey_rec_r"
            app:layout_constraintTop_toTopOf="@id/grey_rec_r"
            app:layout_constraintHorizontal_bias="0.6"
            app:layout_constraintVertical_bias="0.6"
            android:text="+229"
            android:textStyle="bold"
            android:textSize="40px"
            android:textColor="@color/black"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.gms.maps.MapView
            android:id="@+id/mapView"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2" />
    </LinearLayout>
</LinearLayout>