<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ScanCode"
    android:background="@color/black"
    >


    <TextView
        android:id="@+id/scan_code_textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/scan_code_focus_your_camerea_to_a_qr_code"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="10sp"
        android:textSize="12sp"
        android:textColor="@color/white"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/scan_code_camera_card"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="7sp"
        android:layout_marginEnd="7sp"
        android:layout_marginTop="35sp"
        android:layout_marginBottom="125sp"
        android:background="@color/black"
        app:cardCornerRadius="10sp">

        <androidx.camera.view.PreviewView
            android:id="@+id/scan_code_camera_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
         />

    </androidx.cardview.widget.CardView>



    <Button
        android:id="@+id/scan_code_go_button"
        android:layout_width="match_parent"
        android:layout_height="60sp"
        android:layout_marginBottom="60sp"
        android:layout_marginStart="210sp"
        android:layout_marginEnd="5sp"
        android:text="@string/scan_code_go"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/scan_code_lib_button"
        android:layout_width="200sp"
        android:layout_height="60sp"
        android:layout_marginBottom="60sp"
        android:layout_marginStart="5sp"
        android:layout_marginEnd="0sp"
        android:backgroundTint="@color/cardview_dark_background"
        android:text="@string/scan_code_photo_library"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/scan_code_go_button"
        app:layout_constraintStart_toStartOf="parent"/>

    <Button
        android:id="@+id/scan_code_return_button"
        android:backgroundTint="@color/delete_red"
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:layout_marginBottom="5sp"
        android:layout_marginStart="7sp"
        android:layout_marginEnd="7sp"
        android:text="@string/scna_code_return"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <RelativeLayout
        android:id="@+id/activity_scan_code_progress_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="invisible"
        >

        <com.google.android.material.progressindicator.CircularProgressIndicator
            android:id="@+id/activity_scan_code_progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:indeterminate="true"
            android:layout_centerInParent="true"/>
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>